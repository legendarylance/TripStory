                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:layout_gravity="center"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/pic1"
                android:src="@drawable/cat"
                />

