<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maxresdefault"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_weight="0.49">
                <TextView
                    android:text="First Part of the text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/pic1"
                    android:src="@drawable/cat"
                    />

                <TextView
                    android:text="Second Part"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:id="@+id/text2"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textAlignment="center">
                <TextView
                    android:text="First Part of the text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1_2"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/pic2"
                    android:src="@drawable/cat"
                    />

                <TextView
                    android:text="Second Part"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text2_2"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                >
                <TextView
                    android:text="First Part of the text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1_3"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/pic3"
                    android:src="@drawable/cat"
                    />

                <TextView
                    android:text="Second Part"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text2_3"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                >
                <TextView
                    android:text="First Part of the text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1_4"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/pic4"
                    android:src="@drawable/cat"
                    />

                <TextView
                    android:text="Second Part"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text2_4"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                >
                <TextView
                    android:text="First Part of the text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1_5"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/pic5"
                    android:src="@drawable/cat"
                    />

                <TextView
                    android:text="Second Part"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text2_5"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
</LinearLayout>

