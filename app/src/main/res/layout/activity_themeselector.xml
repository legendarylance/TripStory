<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B3FFFFFF"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView4"
            android:layout_weight="0.04"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a Theme"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_weight="0.04"
        android:textColor="#1b72bc"
        android:textSize="20dp"
        android:paddingTop="20dp" />



        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Underwater Adventure"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:drawableLeft="@drawable/water"
        android:background="#00a651"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jungle Book"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:drawableLeft="@drawable/tiger"
        android:background="#1b72bc"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"/>

        </LinearLayout>

</LinearLayout>